{
  "name": "mern-app",
  "version": "1.0.0",
  "description": "A MERN stack application combining backend and frontend",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "server": "nodemon api/index.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run api\" \"npm run client\"",
    "build": "npm run build --prefix frontend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  },
  "engines": {
    "node": "14.x"
  }
}
